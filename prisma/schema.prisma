generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat  = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Gender {
  male
  female
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  full_name  String?
  gender     Gender
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}
